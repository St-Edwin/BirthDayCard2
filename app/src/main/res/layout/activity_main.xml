<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cc99">
    tools:context="com.example.cc.birthdaycard.MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/happy"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy birth Sir Edwin!"
        android:textSize="30dp"
        android:textColor="#6699FF"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="venue :"
        android:textSize="20dp"
        android:textColor="#6699FF"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/textView4"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time :"
        android:textColor="#6699FF"
        android:textSize="20dp"
        android:layout_marginBottom="48dp"
        android:layout_above="@+id/button"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date :"
        android:textColor="#6699FF"
        android:textSize="20dp"
        android:layout_above="@+id/textView3"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="52dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginEnd="22dp"
        android:text="Karibu Lodge"
        android:textColor="#6699FF"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignTop="@+id/textView4"
        android:text="17-09-2017"
        android:textSize="20dp"
        android:textColor="#6699FF"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16:30 till dawn"
        android:textColor="#6699FF"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Here"
        android:textColor="#6699FF"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Details"
        android:textColor="#6699FF"
        android:textSize="20dp"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/button" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/textView6"
        android:text="0719263624"
        android:textSize="20dp"
        android:textColor="#6699FF"/>
</RelativeLayout>
